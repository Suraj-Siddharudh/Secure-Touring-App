<% provide(:title, "Home") %>
<%= render "partials/navbar" %>

<!-- <p id="notice"><%= notice %></p> -->
<div class="container" style="margin-top:50px">
  <div class="card">
  <div class="card-body">
      <p>
        <strong> Name:</strong>
        <%=  User.find(@booking.user_id).first_name  %>
        <%=  User.find(@booking.user_id).last_name %>
      </p>

      <p> <strong> Phone Number: </strong>
        <%=  User.find(@booking.user_id).phone_number %>
      </p>
      
      <p>
        <strong> Email:</strong>
        <%=  User.find(@booking.user_id).email %>
      </p>

      <p>
        <strong> Tour Booked:</strong>
        <%=  Tour.find(@booking.tour_id).Name %>
      </p>
    <p>
      <strong>Number of Seats:</strong>
      <%= @booking.no_of_seats %>
    </p>


<p>
  <strong>Price:</strong>
  <%= Tour.find(@booking.tour_id).Price %>
</p>

<div class="actions">
    <% if current_user.is_admin || ( current_user.is_customer ) %>
       <%= link_to 'Edit', edit_booking_path(@booking) ,:class=>"btn btn-success"%>
    <% end %>
 </div>

<%= link_to 'Back', bookings_path , :class=>"btn btn-secondary float-right"%>
 </div>
</div>
</div>