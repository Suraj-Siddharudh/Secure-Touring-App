
<%= render "partials/navbar" %>
<p id="notice"><%= notice %></p>
<div class="container" style="margin-top:50px">
  <div class="card" style="width: 64rem;">
    <div class="card-body">
      <p>
        <strong> Name:</strong>
        <%=  User.find(@bookmark.user_id).first_name  %>
        <%=  User.find(@bookmark.user_id).last_name %>
      </p>

      <p> <strong> Phone Number: </strong>
        <%=  User.find(@bookmark.user_id).phone_number %>
      </p>
      
      <p>
        <strong> Email:</strong>
        <%=  User.find(@bookmark.user_id).email %>
      </p>

      <p>
        <strong> Tour Bookmarked:</strong>
        <%=  Tour.find(@bookmark.tour_id).Name %>
      </p>


    </div>
  </div>
  <%= link_to 'Back', tours_path, :class=>"btn btn-secondary float-right" %>
  <br/>
    <% if current_user.is_admin || ( current_user.is_customer && current_user.id == @bookmark.user_id) %>
        <%= button_to 'Destroy', @bookmark, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-danger"%>
    <% end %>
</div>
