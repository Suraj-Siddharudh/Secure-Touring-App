<% provide(:title, "Home") %>
<%= render "partials/navbar" %>
<div class="container" style="margin-top:50px">
  <div class="card">
    <div class="card-header">
      <h3>Edit User</h3>
    </div>
<div class="card-body">

    <%= form_for @user, url: { :action => "update" } do |form| %>
        <%= render 'form', { f: form , user: @user} %>
    <%end%>
    </div>
  </div>
  <% if !current_user.is_admin%>
  <%= button_to 'Delete My Account',users_path, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-danger"%>
  <%end%>
</div>
<%= link_to 'Back', users_path, :class => "btn btn-secondary float-right" %>
